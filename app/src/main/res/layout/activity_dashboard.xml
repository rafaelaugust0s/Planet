<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashboardActivity"

    android:background="@drawable/yellow_dialogue"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="99dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/lblWelcome"
            android:layout_width="30pt"
            android:layout_height="20pt"
            android:gravity="center"
            android:text=" Welcome!"
            android:textColor="@color/black"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewDashboard"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Learn languages as you travel!"
                android:textSize="10pt"
                android:textColor="@color/black"/>


        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/lang1"
                android:layout_width="150pt"
                android:layout_height="30pt"
                android:layout_margin="10pt"
                android:inputType="textPersonName"
                android:hint="What would you like to say?"
                 />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10px"
            android:layout_weight="1">

            <TextView
                android:id="@+id/lang2"
                android:layout_width="150pt"
                android:layout_height="30pt"
                android:layout_margin="10pt"
                android:gravity="center"
                android:textSize="10pt"
                android:text=" "
                android:textColor="@color/black"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6pt"

            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Translate"
                android:layout_width="30pt"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Translate"

                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6pt"


            >
            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/BtnSpeak"
                android:layout_width="30pt"
                android:gravity="center"
                android:text="SAY IT!"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textColor="@color/black"
                />



        </TableRow>
        <TextView
            android:id="@+id/pitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pitch"
            android:textSize="16sp"
            android:width="20pt"
            android:layout_margin="5pt"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/pitch_bar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:progress="50">

        </androidx.appcompat.widget.AppCompatSeekBar>

        <TextView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed"
            android:textSize="16sp"
            android:width="20pt"
            android:layout_margin="5pt"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/speed_bar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:progress="50">

        </androidx.appcompat.widget.AppCompatSeekBar>





    </TableLayout>
</LinearLayout>